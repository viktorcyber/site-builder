generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password  String?
  role    Role     @default(USER)
  projects Project[]
}

enum Role {
  USER
  ADMIN
}

model Project {
  id        Int     @id @default(autoincrement())
  title     String  @unique
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}